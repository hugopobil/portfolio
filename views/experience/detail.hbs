<div class="education__container">
    <div class="return__button__container">
        <div class="return__button__experience">
            <a href="/professional_experience">Return</a>
        </div>

        {{#if currentUser}}
            <div class="function__buttons">

                <div class="details__button">
                    <a href="/professional_experience/{{experience._id}}/edit">Edit</a>
                </div>

            </div>
            {{/if}}
    </div>


    <div class="education__card">
        <div class="education__card__image">
            <img src="{{experience.image}}" alt="image">
        </div>
        <div class="education__card__content">
            <p class="education__card__institution">{{experience.firm}}</p>
            <p class="education__card__course">{{experience.position}}</p>
            <p class="education__card__dates">{{experience.startDate}} - {{experience.endDate}}</p>
            <p class="education__card__location">{{experience.location}}</p>
            <div class="education__card__tech_stack">
                {{#each experience.tech_stack}}
                <div class="div">
                    <a href="/projects/{{this}}">{{this}}</a>
                </div>

                {{/each}}
            </div>
            <p class="education__card__responsibilities">
            <ul>
                {{#each experience.responsibilities}}
                  <li>{{this}}</li>
                    <br>
                {{/each}}
            </ul>
            </p>
            
            <div class="education__card__firm__description">{{experience.firm_description}}</div>
            <div class="education__card__firm__link"><a href="{{experience.firm_link}}">Link to Website</a></div>

        </div>
    </div>
</div>